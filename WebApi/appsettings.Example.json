{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER; Database=SurveyBucksDb; Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "SmarterConnection": "Data Source=YOUR_SERVER;Initial Catalog=YOUR_DATABASE;User Id=YOUR_USER;Password=YOUR_PASSWORD"
  },
  "JwtSettings": {
    "Key": "YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "SurveyBucks.Api",
    "Audience": "SurveyBucksUser",
    "DurationInMinutes": 1440,
    "ExpireDays": 1
  },
  "EmailSettings": {
    "SmtpServer": "YOUR_SMTP_SERVER",
    "SmtpPort": 587,
    "SmtpUsername": "YOUR_EMAIL@example.com",
    "SmtpPassword": "YOUR_EMAIL_PASSWORD",
    "FromEmail": "noreply@example.com",
    "FromName": "SurveyBucks",
    "EnableSsl": true,
    "UseStartTls": true
  },
  "Authentication": {
    "Google": {
      "ClientId": "your-google-client-id.googleusercontent.com",
      "ClientSecret": "your-google-client-secret"
    },
    "Facebook": {
      "AppId": "your-facebook-app-id",
      "AppSecret": "your-facebook-app-secret"
    },
    "Microsoft": {
      "ClientId": "your-microsoft-client-id",
      "ClientSecret": "your-microsoft-client-secret"
    }
  },
  "FileStorage": {
    "Type": "Local",
    "LocalPath": "uploads",
    "MaxFileSizeMB": 10
  },
  "AzureStorage": {
    "ConnectionString": "YOUR_AZURE_STORAGE_CONNECTION_STRING",
    "ContainerName": "documents"
  },
  "AllowedOrigins": "https://surveybucks.co.za,http://surveybucks.co.za,https://www.surveybucks.co.za,http://www.surveybucks.co.za,http://localhost:4200",
  "AllowedHosts": "*",
  "Frontend": {
    "BaseUrl": "https://surveybucks.co.za"
  },
  "SurveyMatching": {
    "DefaultMatchThreshold": 70,
    "FieldWeights": {
      "Age": 20,
      "Gender": 15,
      "Location": 20,
      "Income": 15,
      "Interests": 20,
      "Education": 10
    },
    "EnableCaching": true,
    "CacheExpirationMinutes": 10
  },
  "ProfileCompletion": {
    "RequiredCompletionPercentage": 100,
    "RequiredInterestsCount": 3,
    "SectionWeights": {
      "Demographics": 25,
      "Banking": 25,
      "Documents": 25,
      "Interests": 25
    },
    "SectionPriorities": {
      "Documents": 1,
      "Demographics": 2,
      "Banking": 3,
      "Interests": 4
    }
  }
}
